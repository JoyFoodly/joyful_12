<div class="food-page">
  <nav>
    <ul class="nav row">
      <% @foods.each do |food| %>
          <a href="<%= food_path(food) %>">
          <li class='col-lg-1 col-md-3 col-md-3 col-xs-6'>
            <%= image_tag "nav-food-images/#{food.slug}.png" %>
          </li>
          </a>
      <% end %>
    </ul>
  </nav>

  <div class="row">

    <div class="col-md-4">
      <h2>Food: <%= @food.name %></h2>
      <%= image_tag "food-images/#{@food.slug}.jpg", class: 'main-food-image' %>
    </div>

    <aside class="col-md-7 col-md-offset-1">

      <h3>Joyful 12 Coooking methods:</h3>
      <ul class="nav nav-tabs cooking-method-nav">
      <% @food.cooking_methods.each_with_index do |cooking_method, i| %>
        <li data-cooking-method='<%= i + 1 %>' class='<%= 'active' if i == 0 %>'>
          <a href="#"><%= cooking_method.name %></a>
        </li>
      <% end %>
      </ul>
      <div class='boxed-content'>
        <% @food.cooking_methods.each_with_index do |cooking_method, i| %>
          <div class="cooking-method-instructions" data-cooking-method='<%= i + 1 %>'
               style="<%= 'display: none' unless i == 0 %>">
            <%= cooking_method.instructions.html_safe %>
          </div>
        <% end %>
      </div>

      <div class='spacer'></div>

      <h3>Other great recipes from around the web:</h3>
      Filter by Allergy
      <%= form_tag '',  method: :get do  %>
        <%= select_tag 'allergy', options_for_select(Yummly::ALLOWED_ALLERGIES), include_blank: true %>
        <%= submit_tag 'Filter' %>
      <% end %>
      <% Yummly.search(@food.name, { allergy: params[:allergy] }).first(5).each do |search_result| %>
        <div class='row recipe'>
          <hr />
          <div class='col-md-4'>
            <%= link_to (image_tag search_result.image, width: 200), recipe_redirect_path(search_result.id) %>
          </div>

          <div class='col-md-8'>
            <h4><%= search_result.recipe_name %></h4>
            <p>From: <%= link_to search_result.source_name, recipe_redirect_path(search_result.id) %></p>
          </div>
        </div>
      <% end %>
    </aside>
  </div>

</div>