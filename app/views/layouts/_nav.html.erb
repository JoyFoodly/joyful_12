<ul class='nav nav-justified nav-tight nav-ho-hover'>
  <!-- Nav left -->
  <li class='dropdown text-align-top'>
    <a href='#' class='dropdown-toggle season-name bg-grey general-padding-small' data-toggle='dropdown'>
      Current Season: <%= season_name %> <b class='caret'></b>
    </a>
    <ul class='dropdown-menu js-season-selector'>
      <% Season.all.each_with_index do |season, i| %>
      <li class="<%= 'active' if season.name == season_name %>"><%= link_to season.name, '#' %></li>
      <% end %>
    </ul>
    <%= form_tag season_path('selected_season'), method: :patch, class: 'js-season-form' do %>
      <%= hidden_field_tag 'season[name]', nil, class: 'js-season-input' %>
    <% end %>
  </li>

  <!-- Nav center -->
  <li class='center-block'>
    <span class='sr-only'>The JoyFul 12!</span>
    <%= link_to (image_tag 'joyful12logo.png', class: 'img-responsive center-block', width: 300), root_url %>
  </li>


  <!-- Nav right -->
  <li class='text-align-top'>
    <ul class='nav nav-pills nav-justified nav-tight nav-ho-hover'>
      <li><%= link_to 'Classroom', foods_path %></li>
      <li><%= link_to 'Parent Resources', parent_resources_path %></li>
      <li><%= link_to 'My Profile', edit_user_path('me') %></li>
    </ul>
  </li>
</ul>
